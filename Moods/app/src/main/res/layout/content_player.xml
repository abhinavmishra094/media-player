<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/media_player_background"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.mood.moods.PlayerActivity"
    tools:showIn="@layout/activity_player">

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/seekBar"
        android:paddingBottom="10sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="116dp"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/textView8"
        android:layout_above="@+id/seekBar"
        android:layout_alignEnd="@+id/seekBar" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/textView9"
        android:layout_above="@+id/seekBar"
        android:layout_alignParentStart="true" />



        <ImageButton
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:id="@+id/prev"
            android:elevation="10sp"
            android:src="@android:drawable/ic_media_previous"
            android:background="@android:color/transparent"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5sp"
            android:layout_alignParentStart="true" />

        <ImageButton
            android:layout_width="60sp"
            android:layout_height="60sp"
            android:id="@+id/play"
            android:elevation="10sp"
            android:src="@android:drawable/ic_media_play"
            android:background="@android:color/transparent"
            android:layout_marginBottom="5sp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />

        <ImageButton
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:src="@android:drawable/ic_media_next"
            android:background="@android:color/transparent"
            android:id="@+id/nxt"
            android:elevation="10sp"
            android:layout_marginBottom="5sp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="350sp"
        android:id="@+id/imageView4"
        android:src="@drawable/icon"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:layout_width="30sp"
        android:layout_height="30sp"
        android:id="@+id/replay"
        android:elevation="10sp"
        android:padding="3sp"
        android:src="@drawable/replay_off"
        android:background="@android:color/transparent"
        android:layout_above="@+id/play"
        android:layout_toStartOf="@+id/play" />

    <ImageButton
        android:layout_width="30sp"
        android:layout_height="30sp"
        android:id="@+id/shuffle"
        android:src="@drawable/shuffle_off"
        android:elevation="10sp"
        android:background="@android:color/transparent"
        android:layout_alignTop="@+id/replay"
        android:layout_toEndOf="@+id/play" />

</RelativeLayout>
